# Inventario Docker Compose Configuration
# Copy this file to .env and modify the values as needed

# PostgreSQL Database Configuration
POSTGRES_DB=inventario
POSTGRES_USER=inventario
POSTGRES_PASSWORD=inventario_password
POSTGRES_PORT=5432

# Inventario Application Configuration
INVENTARIO_PORT=3333
INVENTARIO_ADDR=:3333
INVENTARIO_UPLOAD_LOCATION=file:///app/uploads?create_dir=1

# JWT Secret for Authentication (minimum 32 characters)
# Generate with: openssl rand -hex 32
# INVENTARIO_RUN_JWT_SECRET=your-secure-32-byte-secret-here

# Timezone (optional)
TZ=UTC

# Advanced Configuration (optional)
# Uncomment and modify as needed

# Custom database host (if using external PostgreSQL)
# POSTGRES_HOST=localhost

# Custom upload location (e.g., cloud storage)
# INVENTARIO_UPLOAD_LOCATION=s3://my-bucket/uploads?region=us-east-1

# Additional environment variables for the application
# INVENTARIO_LOG_LEVEL=info
# INVENTARIO_DEBUG=false
